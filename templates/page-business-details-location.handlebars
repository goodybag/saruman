<div class="header">
  <h3 class="location-name">{{name}}</h3>
  <div class="btn-toolbar">
    <div class="btn-group">
      <button class="btn edit">Edit</button>
      <button class="btn btn-danger delete">Delete</button>
    </div>
  </div>
  <div class="info well">
    <div class="row">
      <div class="span4">
        <div class="module address">
          <h5 class="title">Address</h5>
          <address class="location-address">
            {{street1}}{{#if street2}}, {{street2}}{{/if}}
            <br />
            {{city}}, {{state}} {{zip}}
          </address>
        </div>
        <div class="module location-lat-lon">
          <h5 class="title">Latitude &amp; Longitude</h5>
          <p>
            <span class="location-lat">{{lat}}</span>,
            <span class="location-lon">{{lon}}</span>
          </p>
        </div>
      </div>
      <div class="span4">
        <div class="module hours">
          <h5 class="title">Hours of Operation</h5>
          <dl class="hours-list">
            <div class="day monday">
              <dt>M:</dt>
              <dd>
                {{#if startMonday}}{{startMonday}}{{else}}??{{/if}}
                -
                {{#if endMonday}}{{endMonday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day tuesday">
              <dt>Tu:</dt>
              <dd>
                {{#if startTuesday}}{{startTuesday}}{{else}}??{{/if}}
                -
                {{#if endTuesday}}{{endTuesday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day wednesday">
              <dt>W:</dt>
              <dd>
                {{#if startWednesday}}{{startWednesday}}{{else}}??{{/if}}
                -
                {{#if endWednesday}}{{endWednesday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day thursday">
              <dt>Th:</dt>
              <dd>
                {{#if startThursday}}{{startThursday}}{{else}}??{{/if}}
                -
                {{#if endThursday}}{{endThursday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day friday">
              <dt>F:</dt>
              <dd>
                {{#if startFriday}}{{startFriday}}{{else}}??{{/if}}
                -
                {{#if endFriday}}{{endFriday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day saturday">
              <dt>Sa:</dt>
              <dd>
                {{#if startSaturday}}{{startSaturday}}{{else}}??{{/if}}
                -
                {{#if endSaturday}}{{endSaturday}}{{else}}??{{/if}}
              </dd>
            </div>
            <div class="day sunday">
              <dt>Su:</dt>
              <dd>
                {{#if startSunday}}{{startSunday}}{{else}}??{{/if}}
                -
                {{#if endSunday}}{{endSunday}}{{else}}??{{/if}}
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
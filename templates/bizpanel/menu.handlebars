<div id="menuView">
  <div class="row-fluid">
    <div class="span6">
      {{!-- dummy form so boostrap will style}}
      <form class="form-horizontal">
        <div class="control-group">
          <label class="control-label">Menu Sections:</label>
          <div class="controls controls-row">
            <select>
              <option>All</option>
              {{#menu.sections}}
              <option>{{name}}</option>
              {{/menu.sections}}
              <option>Archived</option>
              <option>Uncategorized</option>
            </select>
          </div>
        </div>
        <div class="form-actions" style="border:none; background-color:inherit; padding-top:0">
          <button class="btn btn-small msg" data-msg-name="editCategories">Edit Menu Sections</button>
        </div>
      </form>
    </div>
    <div class="span6">
      <form class="form-search">
        <div class="input-append">
          <input type="text" class="span12 search-query" placeholder="Search by Item Name or Section"/>
          <button type="submit" class="btn msg"><i class="icon-search"></i> Search</button>
        </div>
      </form>
      <button class="btn btn-primary msg" data-msg-name="newProduct"><i class="icon-plus"></i> Add New Item</button>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table class="table">
        <thead>
          <tr>
            <td>Item Name</td>
            <td>Description</td>
            <td width="50px" class="msg" data-msg-name="sortProducts" data-sort-field="price" data-sort-direction="{{sortDirection}}">
              Price 
              {{#sortPrice}}
              <i class="{{sortIcon}}"></i>
              {{/sortPrice}}
            </td>
            <td>Category</td>
            <td>Photo</td>
            <td width="80px" class="msg" data-msg-name="sortProducts" data-sort-field="likes" data-sort-direction="{{sortDirection}}">
              # of Likes 
              {{#sortLikes}}
              <i class="{{sortIcon}}"></i>
              {{/sortLikes}}
            </td>
            <td width="100px">Tags</td>
            <td width="90px"></td>
          </tr>
        </thead>
        <tbody>
          {{#menu.products}}
          <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{money price}}</td>
            <td>{{#categories}}{{name}}{{/categories}}</td>
            <td><img width="300px" src="{{photoUrl}}" alt="missing photo of {{name}}" /></td>
            <td>{{likes}}</td>
            <td>{{#tags}}
              {{!--nested tables for layout. please forgive me.}}
              <table>
                <tr>
                  <td>{{tag}}</td><td><i class="icon-folder-close"></i></td>
                </tr>
              </table>
              {{/tags}}
            </td>
            <td><button class="btn btn-small msg" data-msg-name="editProduct" data-id="{{id}}">Edit Item</button></td>
          </tr>
          {{/menu.products}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="editCategoriesModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Edit Categories</h3>
  </div>
  <div class="modal-body" style="height:500px">
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary msg" data-msg-name="saveSections">Save changes</a>
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>
<div id="productEditView" class="row-fluid hide">
  <div class="span12">
    <h3 id="productEditTitle">Edit Product</h3>
    <div id="productEditContainer">
    </div>
    {{! add fake form here so the controls will line up}}
    <form class="form-horizontal">
      <div class="form-actions">
        <button class="btn btn-primary msg" data-msg-name="saveProductEdits">Save Changes</button>
        <button class="btn msg" data-msg-name="cancelProductEdits">Cancel</button>
      </div>
    </form>
  </div>
</div>
